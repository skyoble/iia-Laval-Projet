{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
<div class="container">
    <h1>Liste des utilisateurs</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Montant</th>
                <th>Date</th>
            </tr>
        </thead>

        <tbody>
            {% for sale in sales %}
                <tr>
                    <td>{{ sale.id }}</td>
                    <td>{{ sale.montant }}</td>
                    <td>{{ sale.sale_day }}</td>
                    <td>{{ sale.id_Seller? sale.id_Seller.id }}</td>
                    <td>{{ sale.id_Region? sale.id_Region.id }}</td>
                </tr>
            {% endfor %}
            </tbody>
            <tbody>
            {% for region in regions %}
                <tr>
                    <td>{{ region.id }}</td>
                    <td>{{ region.Name }}</td>
                </tr>
            {% endfor %}
            </tbody>
            <tbody>
            {% for seller in sellers %}
                <tr>
                    <td>{{ seller.id }}</td>
                    <td>{{ seller.name }}</td>
                    <td>{{ seller.userName }}</td>
                    <td>{{ seller.age }}</td>
                    <td>{{ seller.email }}</td>
                </tr>
            {% endfor %}
        </tbody>
